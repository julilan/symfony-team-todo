{% extends 'base.html.twig' %}

{% block title %}Edit todo{% endblock %}

{% block content %}

<body>
    <header>
        <h1>Edit todo</h1>
        <form action="{{ path('update_todo', {'id': task.id}) }}" method="POST">
            <input type="text" name="todo" value="{{task.todo}}" required>
            <button type="submit">Edit todo</button>
        </form>
        <p><a href="{{ path('app_todo_crud') }}">Back to todos</a></p>
    </header>
</body>

{% endblock %}