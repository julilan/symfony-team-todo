{% extends 'base.html.twig' %}

{% block title %}Todo App{% endblock %}

{% block content %}

<body>
    <header>
        <h1>Todo App</h1>
        <form action={{ path('create_todo') }} method="POST">
        <input type="text" name="todo" placeholder="My new todo..">
        <button type="submit">Add todo</button>
        </form>
    </header>
    <h2>My todos</h2>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Todo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
            <tr>
                <td>{{task.id}}</td>
                <td>{{task.todo}}</td>
                <td>
                <a href="#"><span>edit</span></a>
                <a href="#"><span>delete</span></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>

{% endblock %}
